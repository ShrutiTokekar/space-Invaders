{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Space Invaders",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run Space Invaders",
            "type": "shell",
            "command": "./space_invaders",
            "dependsOn": ["Build Space Invaders"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean"
        }
    ]
}